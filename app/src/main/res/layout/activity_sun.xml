<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jianzou.batianxia.SunCustomView
            android:id="@+id/sun_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:sun_circle_color="@color/text_black_two"
            app:sun_circle_radius="130"
            android:layout_centerInParent="true"
            app:sun_font_color="@color/text_black_three"
            android:background="@drawable/weather_search_bg_img"
            app:sun_font_size="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还有一小时20分"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="设置时间"/>

</LinearLayout>